# Print Proxy Service Configuration
# Copy this file to .env and modify as needed

# ============================================
# Application Settings
# ============================================
APP_NAME=Print Proxy Service
API_PREFIX=/api

# ============================================
# Server Settings
# ============================================
# Server host address (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=8568

# Enable auto-reload for development (set to true for development)
SERVER_RELOAD=false

# Number of worker processes (usually 1 for Windows print service)
SERVER_WORKERS=1

# ============================================
# Database Settings
# ============================================
# Database connection URL
# Default: sqlite database in user AppData directory
# Example: sqlite:///./print_proxy.db
# DATABASE_URL=sqlite:///./print_proxy.db

# Enable database query logging (for debugging)
DATABASE_ECHO=false

# ============================================
# Security Settings
# ============================================
# JWT token expiration time in minutes (default: 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# JWT algorithm
JWT_ALGORITHM=HS256

# JWT secret key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=change_me_to_a_random_secret_key_in_production

# ============================================
# File and Preview Settings
# ============================================
# Allowed file formats for preview (comma-separated)
# ALLOWED_PREVIEW_FORMATS=pdf,png,jpg,jpeg

# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# ============================================
# Logging Settings
# ============================================
# Log directory (default: user AppData directory)
# LOG_DIRECTORY=

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Legacy Environment Variables (for backward compatibility)
# ============================================
# These are mapped to the new settings above:
# PRINT_PROXY_HOST -> SERVER_HOST
# PRINT_PROXY_PORT -> SERVER_PORT
# PRINT_PROXY_RELOAD -> SERVER_RELOAD
